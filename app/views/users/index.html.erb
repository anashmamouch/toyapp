<p id="notice"><%= notice %></p>

<h1>Users</h1>
<a class="btn btn-primary" style="color:white;" role="button" href=<%=new_user_path %>>New User</a> <br/>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">Operations</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><a class="btn btn-success btn-sm" style="color:white;" role="button" href=<%=user%>>Show</a> <br/></td>
         <td><a class="btn btn-warning btn-sm" style="color:white;" role="button" href=<%=edit_user_path(user)%>>Edit</a> <br/></td>
        <td><%= link_to 'Destroy', user,style: "color:white",class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p class="text-center"><%= link_to 'New User', new_user_path %></p>


